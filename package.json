{
  "name": "template-highlighter",
  "displayName": "Template Highlighter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "template-highlighter.helloWorld",
      "title": "Hello World"
    }],
    "languages": [
      {
        "id": "html",
        "extensions": [".html"],
        "configuration": "./language-grammar.json"
      }
    ],
    "themes": [
      {
        "uiTheme":"vs-dark",
        "label": "My Language",
        "id": "my-language",
        "path": "./my-language.json"
      }
    ],
    "grammars": [
      {
          "language": "html",
          "scopeName": "index.html",
          "path": "./language-grammar.json"
      }
  ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
